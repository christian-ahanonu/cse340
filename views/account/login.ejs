<% if (title) { %>
    <h1 class="login-title"> <%= title%> </h1>
<% } else {
    res.redirect('/')
} %>


<%- messages() %>

<% if (errors && errors.length > 0) { %>
    <ul class="notice">
        <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>


<fieldset id="login-form">
    <form action="/account/login" method="post">
        <label for="email">Email
            <input type="email" name="account_email" id="email" value="<%= locals.account_username %>" required>
        </label>

        <label for="password">Password
            <input type="password" name="account_password" id="password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
        </label>

        <button type="submit">Login</button>
        
        <div class="no-account">
            <p>Don't have an account? <a href="/account/register">Register</a></p>
        </div>
    </form>
</fieldset>
