<% if (title) { %>
    <h1 class="login-title"> <%= title%> </h1>
<% } else { res.redirect('/') } %>

<%- messages() %>

<% if (errors && errors.length > 0) { %>
    <ul class="notice">
        <% errors.forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
        <% }) %>
    </ul>
<% } %>


<div class="accountMg">
    <h2>You're welcome <%= accountData.account_firstname %></h2>

    <p>
        <a href="/account/update/<%= accountData.account_id %>" 
            title="Click to update account information">
            Update Account Information
        </a>
    </p>

    <% if (accountData.account_type === "Employee" || 
    accountData.account_type === "Admin") { %>

        <h3>Inventory Management</h3>
        <p>
            <a href="/inv/" title="Click to manage inventory"> Manage Inventory</a>
        </p>
    <% } %>

</div>