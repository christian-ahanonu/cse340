
<% if (title) { %>
    <h1 class="inventory-title"> <%= title%> </h1>
<% } else {
    res.redirect('/')
} %>


<% if (errors) { %>
    <ul class="notice">
        <% errors.forEach(error => { %>
            <li> <%= error.msg %> </li>
        <%  }) %>
    </ul>
<% } %>


<%- messages() %>



<fieldset id="inventory-form">
    <i>ALL FIELDS ARE REQUIRED</i>

    <form action="/inv/add-inventory" method="post">

        <label for="classification_id">Classification
            <%- classificationList %>
        </label>

        <label for="inv_make">Make
            <input type="text" name="inv_make" id="inv_make" value="<%= locals.inv_make %>" required>
        </label>

        <label for="inv_model">Model
            <input type="text" name="inv_model" id="inv_model" value="<%= locals.inv_model %>" required>
        </label>
        
        <label for="inv_description">Description
            <textarea name="inv_description" id="inv_description" value="<%= locals.inv_description %>" required> </textarea>
        </label>
                
        <label for="inv_image">Image Path
            <input type="text" name="inv_image" id="inv_image" placeholder="/images/vehicles/no-image.png" value="/images/vehicles/no-image.png" required>
        </label>
        
        <label for="inv_thumbnail">Image Thumbnail
            <input type="text" name="inv_thumbnail" id="inv_thumbnail" placeholder="/images/vehicles/no-image-tn.png" value="/images/vehicles/no-image-tn.png" required>
        </label>
        
        <label for="inv_price">Price
            <input type="number" name="inv_price" id="inv_price" min="0" step="0.01" value="<%= locals.inv_price %>" required>
        </label>
        
        <label for="inv_year">Year
            <input type="number" name="inv_year" id="inv_year" min="1900" max="2025" value="<%= locals.inv_year %>" required>
        </label>
        
        <label for="inv_miles">Miles
            <input type="number" name="inv_miles" id="inv_miles" min="0" value="<%= locals.inv_miles %>" required>
        </label>
        
        <label for="inv_color">Color
            <input type="text" name="inv_color" id="inv_color" value="<%= locals.inv_color %>" required>
        </label>

        <button type="submit">Add Vehicle</button>
        
    </form>
</fieldset>
